<h1>Listing courses</h1>

<table>
  <tr>
    <th>Course Number</th>
    <th>Name</th>
    <th># of Students</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.course_number %></td>
    <td><%= course.name %></td>
    <td><%= course.users.count %></td>
    <td>
      <% if course.users.include?(@user) %>
        <%= link_to 'Leave', "/courses/leave/#{course.id}" %>
      <% else %>
        <%= link_to 'Join', "/courses/join/#{course.id}" %>
      <% end %>
    </td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

